<%- include ../layouts/header.ejs %> <% if (messages.error) { %>
<p style="color: red"><%- messages.error %></p>
<% } %> <% if (messages.success) { %>
<p style="color: green"><%- messages.success %></p>
<% } %>
<div style="text-align: center">
  <h1>Add New User</h1>
</div>

<div class="">
  <form class="" action="/users/add" method="post" name="form1">
    <table style="text-align: center" class="mx-auto" width="30%" border="0">
      <tr>
        <td style="text-align: left">First Name</td>
        <td><input type="text" name="name" id="name" value="<%= firstName %>" /></td>
      </tr>
      <tr>
        <td style="text-align: left">Last Name</td>
        <td><input type="text" name="name" id="name" value="<%= lastName %>" /></td>
      </tr>
      <tr>
        <td style="text-align: left">Phone</td>
        <td><input type="text" name="phone" value="<%= phone %>" /></td>
      </tr>
      <tr>
        <td style="text-align: left">Email</td>
        <td><input type="text" name="email" value="<%= email %>" /></td>
      </tr>
      <tr>
        <td></td>
        <td><input type="submit" name="Submit" value="Add" /></td>
      </tr>
    </table>
  </form>
</div>
